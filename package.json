{
    "name": "markdown-toc",
    "displayName": "Markdown TOC",
    "description": "fork from https://github.com/AlanWalk/Markdown-TOC  Markdown TOC(Table Of Contents) Plugin for Visual Studio Code.",
    "version": "1.7.0",
    "icon": "img/markdown-toc.png",
    "license": "MIT",
    "author": {
        "email": "oyyz@vip.qq.com",
        "name": "NepPure"
    },
    "bugs": {
        "url": "https://github.com/NepPure/markdown-toc.git/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NepPure/markdown-toc.git"
    },
    "keywords": [
        "markdown",
        "toc"
    ],
    "homepage": "https://github.com/NepPure/markdown-toc",
    "publisher": "NepPure",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.updateMarkdownToc",
                "title": "Markdown 目录: 新增/更新"
            },
            {
                "command": "extension.deleteMarkdownToc",
                "title": "Markdown 目录: 删除"
            },
            {
                "command": "extension.updateMarkdownSections",
                "title": "Markdown 序号: 新增/更新"
            },
            {
                "command": "extension.deleteMarkdownSections",
                "title": "Markdown 序号: 删除"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == 'markdown'",
                    "command": "extension.updateMarkdownToc"
                },
                {
                    "when": "editorLangId == 'markdown'",
                    "command": "extension.deleteMarkdownToc"
                },
                {
                    "when": "editorLangId == 'markdown'",
                    "command": "extension.updateMarkdownSections"
                },
                {
                    "when": "editorLangId == 'markdown'",
                    "command": "extension.deleteMarkdownSections"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.updateMarkdownToc",
                "key": "ctrl+m t"
            },
            {
                "command": "extension.updateMarkdownSections",
                "key": "ctrl+m s"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Markdown 目录配置",
            "properties": {
                "markdown-toc.depthFrom": {
                    "type": "number",
                    "default": 2,
                    "description": "开始目录层级[1-6]"
                },
                "markdown-toc.depthTo": {
                    "type": "number",
                    "default": 6,
                    "description": "最大目录层级[1-6]"
                },
                "markdown-toc.insertAnchor": {
                    "type": "boolean",
                    "default": false,
                    "description": "自动在标题添锚点"
                },
                "markdown-toc.withLinks": {
                    "type": "boolean",
                    "default": true,
                    "description": "自动创建链接"
                },
                "markdown-toc.orderedList": {
                    "type": "boolean",
                    "default": false,
                    "description": "标题使用有序列表(1. ..., 2. ...)"
                },
                "markdown-toc.updateOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "保存时自动更新"
                },
                "markdown-toc.anchorMode": {
                    "type": "string",
                    "default": "gitea.io",
                    "description": "目录模式",
                    "enum": [
                        "github.com",
                        "bitbucket.org",
                        "ghost.org",
                        "gitlab.com",
                        "gitea.io"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "emoji-regex": "~6.1.0"
    },
    "devDependencies": {
        "tap": "~0.4.8",
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}